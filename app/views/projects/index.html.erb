<% @projects.each do |project| %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title
        <%= project.completed? ? "text-success" : "text-danger" %>">
            <%= project.name %>
        </h5>
        </div>
        <div class="card-body">
        <p class="card-text">
            <%= project.overview %>
        </p>
        <p class="card-text">
            <small class="text-muted">
            <%= project.created_at.strftime("%d/%m/%Y") %>
            </small>
        </p>
        <div class="btn-group" role="group" aria-label="Basic example">
            <a href="<%= project_path(project) %>" class="btn btn-primary">Show</a>
            <a href="<%= edit_project_path(project) %>" class="btn btn-secondary">Edit</a>
            <a href="<%= project_path(project) %>" data-method="delete" data-confirm="Are you sure?" class="btn btn-danger">Delete</a>
        </div>
        </div>
    </div>
    <% end %> 